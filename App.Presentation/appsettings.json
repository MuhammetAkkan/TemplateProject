{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreDefaultConnection": "Host=localhost;Port=5432;Database=TemplateV3;Username=postgres;Password=123456;CommandTimeout=60",
    "Redis": "localhost:6379"
  },
  "JwtOptions": {
    "SecretKey": "K1buU8x7UmD98Jgb4WgUp2HRT8wGf6hIC4Q2KnRdlXU",
    "Issuer": "localhost",
    "Audience": "localhost",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "RateLimiting": {
    "PermitLimit": 5,      
    "WindowSeconds": 10,   
    "QueueLimit": 2        
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}